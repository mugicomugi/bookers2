<div class="container">
<div class="row">
 <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto"> 
<h2>User info</h2>   
<%= form_with model: @user do |f| %>
<%#= form_with model: @User, url:update_user_path(@user.id), method: :patch do |f| %>
  <label for="inputName">Name</label>
  <br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
  <br><br>
  <label for="inputImage">Image</label>
  <br>
  <%= f.file_field :profile_image, placeholder: "profile_image", accept: "image/*" %>  
  <br><br>
  introduction<br>
  <%#= f.text_area :body %>
  <%= f.text_area :introduction, autofocus: true, id:"inputUserIntroduction", placeholder:"introduction"%>
  <br>
  
  <%= f.submit "Update User", class: "btn btn-secondary" %>
<% end %>