<div class="container">
  <div class="row">
   <div class="col-md-3">
   <%= render 'users/user', user: current_user, book: @book %>
   </div> 
    
   <div class="col-md-8 offset-md-1">
        <% if @book.errors.any? %>
        <%= @book.errors.count %> errors prohibited this obj from being saved:
    <ul>
         <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <br>
      <h2>Books</h2>
    
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
      <tr>
      <td>
        <%= image_tag @user.get_profile_image(100, 100) %>
      </td>
      <td>
      <p><%= link_to book.title, book_path(book) %></p>
      </td>
      <td>
      <p><%= book.body %></p>
      </td> 
      </tr>
       <% end %>
    </tbody>
    </table>
  </div> 
</div>




