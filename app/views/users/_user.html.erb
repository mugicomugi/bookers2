<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">     
    <div class="col-md-3">
    <h2>User info</h2>
     <%= image_tag user.get_profile_image(100,100) %>
     <table class="table">
       <tbody>
         <tr></tr>
         <tr>
           <th><p>name</p></th>
           <th><p><%= user.name %></p></th>
         </tr>
         <tr>
           <th>introduction</th>
           <th><%= user.introduction %></th>
         </tr>
        </tbody> 
     </table>
     
     <div class="row">
       <%= link_to edit_user_path(user.id) do %>     
       <i class="fas fa-user-cog"></i>
       <% end %>
     </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        
        Title<br>
        <%= f.text_field :title %>
        
        Opinion<br>
        <%= f.text_area :body %>
        <br>
        <%= f.submit 'Create book', new_book_path, class: "btn btn-success" %>
      <% end %>
      
      </div>
  </div> 
</div>
