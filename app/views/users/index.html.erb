<h1>users index page</h1>


<h1>Users</h1>

<%= render 'user', book: @book, user: @user %>

<%= @users.each do |user| %>


<div class="col-md-8 offset-md-1">
    <h2>Users</h2>
  <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>  
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
  <tr>
     <td>
        <%= image_tag user.get_profile_image(100,100) %>
     </td>
  </tr>
  <td>
      <%= user.name %>
  </td>
  <tr>
      <%= link_to 'show', user_path(user.id) %>
  </tr>
   
   </tbody>
   </table>
   
</div>
<% end %>
