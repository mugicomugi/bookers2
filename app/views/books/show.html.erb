<p id="notice">You have created book successfully.</p>
<div class="container px-5 px-sm-0">
<div class="row">
  <div class="col-md-3">
    <%= render 'users/user', book: @book_new, user: @user %>
  </div>  
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <div>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <tr>
      <td>
        <%= image_tag @book.user.get_profile_image(100, 100) %>
        <%= @book.user.name %>
      </td>
      <td>
      <%= @book.title %>
      </td>
      <td>
      <%= @book.body %>
      </td>
      <td>
        <%= link_to "edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
      </td>
      <td>
        <% if @book.user == current_user %>
      </td>
      <td>
        <%= button_to "delete", book_path(@book.id), { method: :delete, data: { turbo_confirm: "本当に削除しますか？"} } %>
      </td> 
      <% end %>
      </tr>
      </tbody>
      </table>
    </div>
    </div>
</div>
</div>